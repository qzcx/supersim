          },
          "client_arbiter": {
            "type": "THIS SHOULD BE OVER-WRITTEN!",
            "greater": false
          }
        }
      },
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "THIS SHOULD BE OVER-WRITTEN!",
            "greater": false
          }
        },
        "full_packet": true,
        "packet_lock": true,
        "idle_unlock": false
      },
      "output_crossbar": {
        "latency": 1  // cycles
      },
      "output_crossbar_scheduler": "THIS SHOULD BE OVER-WRITTEN!"
