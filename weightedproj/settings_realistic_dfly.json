    "interface": {
      "type": "standard",
      "adaptive": false,
      "fixed_msg_vc": false,
      "crossbar_scheduler": "THIS SHOULD BE OVER-WRITTEN!",
      "init_credits_mode": "$&(network.router.input_queue_mode)&$",
